# AWS Configuration
AWS_PROFILE=invoice
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug

# DynamoDB Tables (will be set by Terraform outputs)
# Format: {environment}-invoices (e.g., dev-invoices, prod-invoices)
DYNAMODB_INVOICES_TABLE=dev-invoices
DYNAMODB_EVENTS_TABLE=dev-invoice-events

# S3 Buckets (will be set by Terraform outputs)
# Format: {environment}-invoice-{type} (e.g., dev-invoice-documents)
S3_DOCUMENTS_BUCKET=dev-invoice-documents
S3_UPLOADS_BUCKET=dev-invoice-uploads

# API Configuration
API_BASE_URL=https://api-dev.invoices.example.com
API_KEY=your-api-key-here

# Feature Flags
FEATURE_PDF_GENERATION=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_LEGACY_COMPATIBILITY=true

# Performance Settings
LAMBDA_TIMEOUT=30000
BATCH_SIZE=25
MAX_RETRIES=3

# Monitoring
ENABLE_XRAY_TRACING=true
ENABLE_DETAILED_LOGGING=true