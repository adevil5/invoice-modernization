{
  "name": "invoice-modernization",
  "version": "1.0.0",
  "description": "Cloud-native invoice processing service using TypeScript, AWS Lambda, and DynamoDB",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts'",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts'",
    "prepare": "husky install",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "bundle": "esbuild src/interfaces/http/*.ts src/interfaces/events/*.ts --bundle --platform=node --target=node22 --format=esm --outdir=dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "invoice",
    "aws",
    "lambda",
    "serverless",
    "typescript"
  ],
  "author": "Invoice Modernization Team",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^8.0.0",
    "jest": "^30.0.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
